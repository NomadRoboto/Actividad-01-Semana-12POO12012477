class Hora {
    private int horas;
    private int minutos;
    private int segundos;

    public Hora(int horas, int minutos, int segundos) {
        this.horas = horas;
        this.minutos = minutos;
        this.segundos = segundos;
    }

    public void avanzar(int horas, int minutos, int segundos) {
        this.horas += horas;
        this.minutos += minutos;
        this.segundos += segundos;

        // Ajustar los valores para mantener la hora válida
        if (this.segundos >= 60) {
            this.minutos += this.segundos / 60;
            this.segundos %= 60;
        }
        if (this.minutos >= 60) {
            this.horas += this.minutos / 60;
            this.minutos %= 60;
        }
        if (this.horas >= 24) {
            this.horas %= 24;
        }
    }

    public void ponerACero() {
        this.horas = 0;
        this.minutos = 0;
        this.segundos = 0;
    }

    public void visualizar() {
        System.out.printf("%02d:%02d:%02d\n", horas, minutos, segundos);
    }
}

public class Main {
    public static void main(String[] args) {
        Hora hora = new Hora(10, 30, 45);

        System.out.println("Hora actual:");
        hora.visualizar();

        // Avanzar la hora en 2 horas, 15 minutos y 30 segundos
        hora.avanzar(2, 15, 30);
        System.out.println("Hora después de avanzar:");
        hora.visualizar();

        // Poner la hora a 00:00:00
        hora.ponerACero();
        System.out.println("Hora después de poner a cero:");
        hora.visualizar();
    }
}
